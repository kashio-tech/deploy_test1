            <div class="image2"></div>
            <div class="image3"></div>
            <div class="image4"></div>
            <div class="image5"></div>
        </div>
    </div> -->
    <%= render 'layouts/notifications' %>
    <%= yield %>
    <footer>
        <p>@CopyRight Infratop.inc</p>
    </footer>
</body>

</html>