<h2>User info</h2>

<h2>New book</h2>
<%= form_for(@book, url: books_path) do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation">
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li>
            <%= message %>
        </li>
        <% end %>
    </ul>
</div>
<% end %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4> Opinion</h4>
<%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %>