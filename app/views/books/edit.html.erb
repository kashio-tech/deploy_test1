<div class="body-wrap">
    <div id="st-container" class="st-container">
        <div class="st-pusher">
            <div class="st-content">
                <div class="st-content-inner">
                    <section class="slice slice-lg sct-color-1">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-4 col-md-offset-4">
                                    <div class="form-user style-1 rounded has-shadow-1">
                                        <div class="form-header text-center">
                                            <h2 class="form-header-title">User info</h2>
                                        </div>
                                        <%= form_for(@book, url: books_path) do |f| %>
                                        <% if @book.errors.any? %>
                                        <h4>
                                            <%= "#{@book.errors.full_messages.count} error(s) prohibited this obj from being saved:" %>
                                        </h4>
                                        <div id="error_explanation">
                                            <ul>
                                                <% @book.errors.full_messages.each do |message| %>
                                                <li>
                                                    <%= message %>
                                                </li>
                                                <% end %>
                                            </ul>
                                        </div>
                                        <% end %>
                                        <% end %>
                                        <div class="form-body">
                                            <!-- ここにform_forを追加します -->
                                            <%= form_for(@book) do |f| %>
                                            <h1>Title</h1>
                                            <%= f.text_field :title %>
                                            <h1>Opinion</h1>
                                            <%= f.text_area :body %><br>
                                            <%= f.submit "Update Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>